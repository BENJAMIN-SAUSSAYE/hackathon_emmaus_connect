{% extends 'visitor.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('smartphone-result') }}
{% endblock %}

{% block body %}
	<main class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-11 col-sm-12 col-lg-9 bg-light py-5 my-5 rounded custom-shadow">
				<div class="d-flex flex-column flex-md-row mt-md-5 me-md-5">
					<div
						class="custom-image d-flex justify-content-center my-5 my-md-auto ms-md-5">
						{# <img class="object-fit-cover h-100" src="{{ smartphone.devicePicturePath ?? asset('build/images/iphone14.png') }}" alt="photo du smartphone"/> #}
						<img class="object-fit-cover h-100" src="{{ asset('build/images/iphone14.png') }}" alt="photo du smartphone"/>
					</div>

					<div class="col mx-2 mx-md-3">
						<h2 class="fs-4 pb-1 fw-bolder border-bottom border-primary">{{ smartphone.model.name }}</h2>
						<div class="d-flex mt-4">
							<div>
								<ul class="list-unstyled fw-bolder custom-lh">
									<li>Marque :
										{{ smartphone.model.brand.name }}</li>
									<li>Modèle :
										{{ smartphone.model.codeNumber }}
										-
										{{ smartphone.yearManufacture }}</li>
									<li>Taille de l'écran :
										{{ smartphone.screenSize }}</li>
									<li>Mémoire vive (RAM) :
										{{ smartphone.ramNumber }}</li>
									<li>Capacité de stockage :
										{{ smartphone.stockageNumber }}</li>
									<li>Technologie cellulaire :
										{{ smartphone.networkSpeed }}</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<div class="mt-3 mt-md-5 pt-md-4">
					<div class="d-flex justify-content-center flex-column flex-md-row text-light gap-3">
						<div class="custom-card card1 bg-primary mx-1">
							<p class="indice m-0">Indice Catégorie</p>
							<p class="indice-value m-0 custom-fs fw-bolder"></p>
						</div>
						<div class="custom-card bg-primary mx-1 mt-1 mt-md-0">
							<p class="indice m-0">Prix conseillé</p>
							<p class="indice-value m-0 custom-fs fw-bolder">{{ smartphone.calculatePrice }}€</p>
						</div>
					</div>
				</div>
				<div class="row d-flex justify-content-center mt-2 mt-md-5 pt-5">
					<div class="comment col-11 col-md-10 mx-2 mx-md-3 border border-primary p-4 rounded">
						<p class="fw-bolder fs-5">Commentaire</p>
						<p>{{ smartphone.comment }}</p>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
