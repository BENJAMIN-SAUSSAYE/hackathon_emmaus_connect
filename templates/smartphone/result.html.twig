{% extends 'visitor.html.twig' %}

{% block title %}
	Votre smartphone -
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('smartphone-result') }}
{% endblock %}

{% block body %}
	<main class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-11 col-sm-12 col-lg-9 bg-light py-5 my-5 rounded custom-shadow">

				<div class="d-flex align-items-center gap-2 ms-2 ms-md-5">
					{% include 'components/svg/icon_phone.svg.twig' %}
					<h1 class="m-0">
						Votre Smartphone
					</h1>
				</div>

				<div class="d-flex flex-column flex-md-row mt-md-5 me-md-5">
					<div class="custom-image d-flex justify-content-center my-5 my-md-auto ms-md-5">
						<img class="object-fit-cover h-100" src="{{ asset('build/images/iphone14.png') }}" alt="photo du smartphone"/>
					</div>

					<div class="col mx-2 mx-md-3">
						<h2 class="fs-4 pb-1 fw-bolder border-bottom border-primary">iPhone 14</h2>
						<div class="d-flex mt-4">
							<div>
								<ul class="list-unstyled fw-bolder custom-lh">
									<li>Marque :</li>
									<li>Modèle :</li>
									<li>Taille de l'écran :</li>
									<li>Mémoire vive (RAM) :</li>
									<li>Capacité de stockage :</li>
									<li>Système d'exploitation :</li>
									<li>Technologie cellulaire :</li>
								</ul>
							</div>
							<div class="ms-3 ms-md-5 ps-xl-5">
								<ul class="list-unstyled custom-lh">
									<li>Apple</li>
									<li>iPhone 14</li>
									<li>6,06 pouces</li>
									<li>8 Go</li>
									<li>254 Go</li>
									<li>IOS 16</li>
									<li>5G</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<div class="mt-3 mt-md-5 pt-md-4">
					<div class="d-flex justify-content-center flex-column flex-md-row text-light gap-3">
						<div class="d-flex flex-md-column justify-content-between gap-2">
							<div class="mini-card flex-fill text-center">
								<p class="text-primary m-0">Indice de Stockage</p>
								<p class="text-primary m-0 custom-fs fw-bolder">0</p>
							</div>
							<div class="mini-card flex-fill text-center">
								<p class="text-primary m-0">Indice de Stockage</p>
								<p class="text-primary m-0 custom-fs fw-bolder">0</p>
							</div>
						</div>
						<div class="custom-card card1 bg-primary mx-1">
							<p class="indice m-0">Indice Catégorie</p>
							<p class="indice-value m-0 custom-fs fw-bolder">2-C</p>
						</div>
						<div class="custom-card bg-primary mx-1 mt-1 mt-md-0">
							<p class="indice m-0">Prix conseillé</p>
							<p class="indice-value m-0 custom-fs fw-bolder">700e</p>
						</div>
					</div>
				</div>

				<div class="d-flex justify-content-between mt-3 mt-md-5 pt-4 mx-md-5 px-md-3 gap-2">
					<a href="#" role="button" class="custom-btn-back border border-secondary text-secondary my-2">
						Retour
					</a>

					<a href="#" role="button" class="custom-btn bg-secondary text-light my-2">
						Valider
					</a>
				</div>

			</div>
		</div>
	</main>
{% endblock %}
