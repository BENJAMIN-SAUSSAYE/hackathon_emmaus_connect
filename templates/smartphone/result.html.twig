{% extends 'visitor.html.twig' %}

{% block title %}
	Votre smartphone -
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('smartphone-result') }}
{% endblock %}

{% block body %}
	<main class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-11 col-sm-12 col-lg-9 bg-light py-5 my-5 rounded custom-shadow">
				<div class="d-flex flex-column">
					<div class="d-flex align-items-center gap-2 ms-2 ms-md-5">
						{% include 'components/svg/icon_phone.svg.twig' %}
						<h1 class="m-0">
							Votre Smartphone
						</h1>
					</div>
					<p class="align-self-center mt-5 fw-bolder fs-5">
						<span>
							<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-check-circle-fill text-success" viewbox="0 0 16 16">
								<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
							</svg>
						</span>
						Votre téléphone a été ajouté !
					</p>
					<p class="col-12 col-md-10 align-self-center fw-bolder fs-5 text-center text-primary bg-custom p-5 rounded">{{ congratulationsPhrase }}</p>
				</div>
				<div class="d-flex flex-column flex-md-row mt-md-5 me-md-5">
					<div
						class="custom-image d-flex justify-content-center my-5 my-md-auto ms-md-5">
						{# <img class="object-fit-cover h-100" src="{{ smartphone.devicePicturePath ?? asset('build/images/iphone14.png') }}" alt="photo du smartphone"/> #}
						<img class="object-fit-cover h-100" src="{{ asset('build/images/iphone14.png') }}" alt="photo du smartphone"/>
					</div>

					<div class="col mx-2 mx-md-3">
						<h2 class="fs-4 pb-1 fw-bolder border-bottom border-primary">{{ smartphone.model.name }}</h2>
						<div class="d-flex mt-4">
							<div>
								<ul class="list-unstyled fw-bolder custom-lh">
									<li>Marque :</li>
									<li>Modèle :</li>
									<li>Taille de l'écran :</li>
									<li>Mémoire vive (RAM) :</li>
									<li>Capacité de stockage :</li>
									<li>Technologie cellulaire :</li>
								</ul>
							</div>
							<div class="ms-3 ms-md-4 ps-xl-5">
								<ul class="list-unstyled custom-lh">
									<li>{{ smartphone.model.brand.name }}</li>
									<li>
										{{ smartphone.model.codeNumber }}
										-
										{{ smartphone.yearManufacture }}
									</li>
									<li>{{ smartphone.screenSize }}
										pouces</li>
									<li>{{ smartphone.ramNumber }}
										Go</li>
									<li>{{ smartphone.stockageNumber }}
										Go</li>
									<li>{{ smartphone.networkSpeed }}</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<div class="mt-3 mt-md-5 pt-md-4">
					<div class="d-flex justify-content-center flex-column flex-md-row text-light gap-3">
						<div class="custom-card card1 bg-primary mx-1">
							<p class="indice m-0">Indice Catégorie</p>
							<p class="indice-value m-0 custom-fs fw-bolder">{{ categoryLabel }}</p>
						</div>
						<div class="custom-card bg-primary mx-1 mt-1 mt-md-0">
							<p class="indice m-0">Prix conseillé</p>
							<p class="indice-value m-0 custom-fs fw-bolder">{{ smartphone.calculatePrice }}€</p>
						</div>
					</div>
				</div>
				<div class="row d-flex justify-content-center mt-2 mt-md-5 pt-5">
					<div class="comment col-11 col-md-10 mx-2 mx-md-3 border border-primary p-4 rounded">
						<p class="fw-bolder fs-5">Commentaire</p>
						<p>{{ smartphone.comment }}</p>
					</div>
				</div>

				<div class="d-flex justify-content-end mt-3 mt-md-5 pt-4 mx-md-5 gap-2">
					<a href="{{ path('smartphone_stock') }}" role="button" class="custom-btn bg-secondary text-light my-2">
						Voir les smartphones
					</a>
				</div>

			</div>
		</div>
	</main>
{% endblock %}
