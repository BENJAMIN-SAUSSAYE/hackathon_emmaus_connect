{% extends 'visitor.html.twig' %}

{% block title %}
{{ parent() }}
- Caractéristique
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{{ encore_entry_link_tags('caracteristique') }}
{% endblock %}

{% block body %}
<main class="container ">
    <div class=" p-3 pe-3  mb-5 mt-5 d-flex justify-content-center flex-column align-items-center row">
        <div class="col-8 bg-light position-relative box-shadow rounded border p-5">

            <h1 class="text-tertiary">{% include "components/svg/icon_stats.svg.twig" %} Caractéristique du Smartphone
            </h1>
            <div class="row d-flex m-auto flex-row">
                <div class="col-5">
                    <img class="object-fit-cover w-100" src="{{ asset('build/images/iphone14.png') }}" alt="iphone">
                </div>
                <div class="col">
                    <div class="d-flex flex-column">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <h2>Marque</h2>

                        <div class="d-flex align-items-center">
                            <p class="border border-primary w-100 rounded">{{ smartphone.model.brand.name }}</p>
                            {% include "components/svg/icon_edit.svg.twig" %}
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <h2>Nom du Model</h2>
                        <div class="d-flex align-items-center">
                            <p class="border border-primary w-100 rounded"> {{smartphone.model.name}}</p>
                            {% include "components/svg/icon_edit.svg.twig" %}
                        </div>
                    </div>

                    <div class="d-flex flex-row flex-wrap gap-3">
                        {{ form_row(form.ramNumber)}}
                    </div>

                    <div class="d-flex flex-row flex-wrap gap-3">
                        {{ form_row(form.stockageNumber)}}

                    </div>



                    <div class="d-flex flex-row flex-wrap gap-3">
                        {{ form_row(form.ponderation) }}

                    </div>
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-end">
                            {{ form_row(form.comment) }}
                            {% include "components/svg/icon_edit.svg.twig" %}
                        </div>
                    </div>

                    <button class=" btn btn-secondary me-auto d-flex justify-content-center align-items-end text-light">
                        valider
                    </button>
                    {{form_end(form)}}
                </div>
            </div>
            <button class=" btn btn-outline-secondary text-secondary">retour</button>
        </div>
    </div>
</main>

</div>
{% endblock %}