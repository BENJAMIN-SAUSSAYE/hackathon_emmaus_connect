<div {{ attributes }} class="p-4">

	{{ form_start(form) }}
	<div class="container">
		<div class="mb-4 text-start">
			<label for="searchTxt" class="form-label fw-bold custom-text-size text-tertiary">Marque du téléphone</label>
			<div class="form-error">{{ form_errors(form.brand) }}</div>
			{{ form_widget(form.brand) }}
			<small>{{ form_help(form.brand) }}</small>
		</div>

		<div class="mb-4 text-start">
			<label for="modelTxt" class="form-label fw-bold custom-text-size text-tertiary">Modèle du smatphone</label>
			<div class="form-error">{{ form_errors(form.model) }}</div>
			{{ form_widget(form.model) }}
			<small>{{ form_help(form.model) }}</small>
		</div>

		<div class="mb-4 text-start">
			<label for="searchTxt" class="form-label fw-bold custom-text-size text-tertiary">IMEI
				<span class="fs-6">(International Mobile Equipment Identity)</span>
			</label>
			<div class="form-error">{{ form_errors(form.imeiNumber) }}</div>
			{{ form_widget(form.imeiNumber) }}
			<small>{{ form_help(form.imeiNumber) }}</small>
		</div>
	</div>
	<div class="d-flex flex-column justify-content-center align-items-end m-auto">
		<button type="submit" class="btn my-xl-5 mt-3 text-light bg-secondary rounded-pill fw-bold custom-text-size px-3">Rechercher</button>
	</div>
	{{ form_end(form) }}
</div>
