<div {{ attributes }}>
	{{ form_start(form) }}

	<div class="mb-4 text-start">
		<label for="searchTxt" class="form-label fw-bold custom-text-size text-tertiary">Marque du téléphone</label>
		{{ form_widget(form.brand) }}
	</div>

	<div class="mb-4 text-start">
		<label for="modelTxt" class="form-label fw-bold custom-text-size text-tertiary">Modèle du smatphone</label>
		{{ form_widget(form.model) }}
	</div>

	<div class="mb-4 text-start">
		<label for="searchTxt" class="form-label fw-bold custom-text-size text-tertiary">IMEI (International Mobile Equipment Identity)</label>
		<br>
		{{ form_widget(form.imeiNumber) }}
	</div>

	<div class="d-flex flex-column justify-content-center align-items-center m-auto">
		<button type="submit" class="btn my-5 text-light bg-secondary rounded-pill fw-bold custom-text-size px-3">RECHERCHER</button>
	</div>
	{{ form_end(form) }}
</div>


